<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="TasksAppTheme" parent="android:Theme.Material.Light">
        <!-- your app's branding color (for the app bar) -->
        <item name="android:colorPrimary">@color/primary</item>
        <!-- darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent</item>
        <!-- your primary text color used in things like the actionbar -->
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <!-- the background color of your windows -->
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <!-- define your colors separately so that they can be referenced elsewhere -->
    <color name="primary">#1eabf2</color>
    <color name="primary_dark">#178acf</color>
    <color name="accent">@color/primary_dark</color>
    <color name="text_color_primary">@android:color/white</color>
    <color name="window_background">#c1dae6</color>
</resources>